<?xml version="1.0" encoding="utf-8"?>
<ServiceDefinition name="MongoDBReplicaSet" xmlns="http://schemas.microsoft.com/ServiceHosting/2008/10/ServiceDefinition" schemaVersion="2012-10.1.8">
  <WorkerRole name="MongoDB.WindowsAzure.MongoDBRole" vmsize="Medium">
    <Imports>
      <Import moduleName="Diagnostics" />
    </Imports>
    <Endpoints>
      <InternalEndpoint name="MongodPort" protocol="tcp" port="27017" />
    </Endpoints>
    <ConfigurationSettings>
      <Setting name="MongoDBDataDir" />
      <Setting name="ReplicaSetName" />
      <Setting name="MongoDBDataDirSizeMB" />
      <Setting name="MongoDBLogVerbosity" />
      <Setting name="MongoDBDirectoryPerDB" />
      <Setting name="RecycleOnExit" />
      <Setting name="ReplicaSetKey" />
      <Setting name="Authenticate" />
      <Setting name="AdminCredentials" />
      <Setting name="UserCredentials" />
      <Setting name="UserDatabases" />
      <Setting name="LogFileEnable" />
    </ConfigurationSettings>
    <LocalResources>
      <LocalStorage name="MongoDBLocalDataDir" cleanOnRoleRecycle="false" sizeInMB="1024" />
      <LocalStorage name="MongodLogDir" cleanOnRoleRecycle="false" sizeInMB="512" />
      <LocalStorage name="BackupDriveCache" cleanOnRoleRecycle="true" sizeInMB="512" />
    </LocalResources>
  </WorkerRole>
  <WebRole name="MongoDB.WindowsAzure.Manager" vmsize="Small">
    <Sites>
      <Site name="Web">
        <Bindings>
          <Binding name="Endpoint1" endpointName="WebEndpoint" />
        </Bindings>
      </Site>
    </Sites>
    <Endpoints>
      <InputEndpoint name="WebEndpoint" protocol="http" port="80" />
    </Endpoints>
    <Imports>
      <Import moduleName="Diagnostics" />
    </Imports>
    <ConfigurationSettings>
      <Setting name="ReplicaSetName" />
      <Setting name="MongoDBDataDir" />
      <Setting name="Authenticate" />
      <Setting name="AdminCredentials" />
    </ConfigurationSettings>
    <LocalResources>
      <LocalStorage name="BackupDriveCache" cleanOnRoleRecycle="true" sizeInMB="512" />
    </LocalResources>
  </WebRole>
</ServiceDefinition>